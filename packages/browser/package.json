{
  "name": "@waveform-playlist/browser",
  "version": "5.0.0-alpha.15",
  "description": "Browser bundle for waveform-playlist with React",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "pnpm typecheck && vite build",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "waveform",
    "audio",
    "browser",
    "react",
    "waveform-playlist",
    "audio-editor",
    "multitrack"
  ],
  "author": "Naomi Aro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/naomiaro/waveform-playlist.git",
    "directory": "packages/browser"
  },
  "homepage": "https://naomiaro.github.io/waveform-playlist",
  "bugs": {
    "url": "https://github.com/naomiaro/waveform-playlist/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.1",
    "typescript": "^5.3.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.0"
  },
  "dependencies": {
    "@waveform-playlist/annotations": "workspace:*",
    "@waveform-playlist/core": "workspace:*",
    "@waveform-playlist/loaders": "workspace:*",
    "@waveform-playlist/media-element-playout": "workspace:*",
    "@waveform-playlist/playout": "workspace:*",
    "@waveform-playlist/recording": "workspace:*",
    "@waveform-playlist/ui-components": "workspace:*",
    "@waveform-playlist/webaudio-peaks": "workspace:*",
    "uuid": "^13.0.0",
    "waveform-data": "^4.5.2"
  },
  "peerDependencies": {
    "@dnd-kit/core": "^6.0.0",
    "@dnd-kit/modifiers": "^9.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "styled-components": "^6.0.0",
    "tone": "^15.0.0"
  }
}
